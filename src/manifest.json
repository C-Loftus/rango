{
	"name": "Rango",
	"version": "0.0.9",
	"description": "Extension that allows you to interact with webpages using your voice and talon",
	"homepage_url": "https://github.com/david-tejada/rango",
	"manifest_version": 2,
	"minimum_chrome_version": "80",
	"browser_specific_settings": {
		"gecko": {
			"id": "rango@david-tejada",
			"strict_min_version": "80.0"
		}
	},
	"icons": {
		"48": "./assets/icon128.png",
		"128": "./assets/icon128.png"
	},
	"permissions": ["storage", "activeTab", "clipboardRead", "clipboardWrite"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./content/content.ts"],
			"css": ["./styles/hints.css", "./styles/tippy.css"],
			"run_at": "document_idle"
		},
		{
			"matches": ["https://*.no_url.com/*"],
			"exclude_matches": ["https://*.no_url.com/*"],
			"js": [
				"./types/types.ts",
				"./content/hints.ts",
				"./content/click-element.ts",
				"./content/intersectors.ts",
				"./content/hover.ts",
				"./lib/dom-utils.ts",
				"./lib/utils.ts"
			]
		}
	],
	"background": {
		"persistent": false,
		"scripts": ["./background/background.ts"]
	},
	"commands": {
		"get-talon-request": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "MacCtrl+Shift+F"
			},
			"description": "Give the signal to the native app to get the request"
		}
	},
	"browser_action": {
		"default_icon": "./assets/icon48.png",
		"default_title": "Rango"
	}
}
