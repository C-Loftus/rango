{
	"name": "Rango",
	"version": "0.0.0",
	"description": "Extension that allows you to interact with webpages using your voice and talon",
	"homepage_url": "https://github.com/david-tejada/rango",
	"manifest_version": 3,
	"minimum_chrome_version": "100",
	"browser_specific_settings": {
		"gecko": {
			"id": "rango@david-tejada",
			"strict_min_version": "100.0"
		}
	},
	"icons": {
		"128": "./assets/icon.png"
	},
	"permissions": ["storage", "activeTab", "clipboardRead", "clipboardWrite"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["./content/content.ts"],
			"css": ["./styles/hints.css"],
			"run_at": "document_idle"
		},
		{
			"matches": ["https://*.no_url.com/*"],
			"exclude_matches": ["https://*.no_url.com/*"],
			"js": [
				"./types/types.ts",
				"./content/hints.ts",
				"./content/click-element.ts",
				"./content/intersecting-elements.ts",
				"./content/hover.ts",
				"./lib/dom-utils.ts",
				"./lib/utils.ts"
			]
		}
	],
	"background": {
		"service_worker": "./background/background.ts",
		"type": "module"
	},
	"commands": {
		"get-talon-request": {
			"suggested_key": {
				"default": "Alt+Shift+A"
			},
			"description": "Give the signal to the native app to get the request"
		}
	}
}
