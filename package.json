{
	"private": true,
	"scripts": {
		"build": "parcel build src/manifest.json --no-content-hash --no-source-maps --dist-dir dist --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint src/**/*.css",
		"lint:js": "xo",
		"lintAndBuild": "run-p lint:* build",
		"test": "jest --watch",
		"watch": "parcel watch src/manifest.json --dist-dir dist --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser"
		],
		"prettier": "true",
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			],
			"import/extensions": [
				2,
				"never"
			]
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"singleQuote": false,
		"bracketSpacing": true
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"webextension-polyfill": "^0.8.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.3.2",
		"@parcel/transformer-image": "^2.3.2",
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/jest": "^27.4.1",
		"@types/webextension-polyfill": "^0.8.2",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint-config-xo": "^0.40.0",
		"eslint-config-xo-typescript": "^0.50.0",
		"jest": "^27.5.1",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.3.2",
		"stylelint": "^14.6.0",
		"stylelint-config-xo": "^0.21.0",
		"ts-jest": "^27.1.4",
		"typescript": "^4.6.3",
		"xo": "^0.48.0"
	},
	"webExt": {
		"sourceDir": "dist",
		"run": {
			"startUrl": [
				"https://en.wikipedia.org/wiki/Main_Page"
			]
		}
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"transform": {
			"node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!variables/.*)"
		]
	}
}
