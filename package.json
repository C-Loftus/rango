{
	"private": true,
	"scripts": {
		"build:mv2": "rimraf dist-mv2 && parcel build src/mv2/manifest.json --no-content-hash --dist-dir dist-mv2 --no-cache --detailed-report 0",
		"build:mv2-safari": "rimraf dist-mv2-safari && parcel build src/mv2-safari/manifest.json --no-content-hash --dist-dir dist-mv2-safari --no-cache --detailed-report 0",
		"build:mv3": "rimraf dist-mv3 && parcel build src/mv3/manifest.json --no-content-hash --dist-dir dist-mv3 --no-cache --detailed-report 0",
		"build": "run-p build:*",
		"package:mv2": "web-ext build --artifacts-dir=web-ext-artifacts/mv2",
		"package:mv2-safari": "web-ext build --source-dir=dist-mv2-safari --artifacts-dir=web-ext-artifacts/mv2-safari",
		"package:mv3": "web-ext build --source-dir=dist-mv3 --artifacts-dir=web-ext-artifacts/mv3",
		"package": "run-p package:*",
		"build-and-package": "run-s build package",
		"check-types": "tsc --noemit",
		"unused-exports": "ts-unused-exports ./tsconfig.json",
		"lint": "run-p lint:* check-types",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint src/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"jest:unit": "jest --testPathIgnorePatterns='e2e'",
		"serve-test-pages": "http-server ./e2e/test-pages/",
		"jest:e2e": "jest --testPathPattern='e2e' --runInBand",
		"jest": "run-s jest:unit jest:e2e",
		"jest:watch": "jest --watch --runInBand",
		"watch": "parcel watch src/mv2/manifest.json --dist-dir dist-mv2 --no-cache --no-hmr",
		"watch:mv3": "parcel watch src/mv3/manifest.json --dist-dir dist-mv3 --no-cache --no-hmr",
		"start:firefox": "web-ext run --target firefox-desktop",
		"start:chromium": "web-ext run --source-dir dist-mv3 --target chromium"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"parserOptions": {
			"project": "./tsconfig.xo.json"
		},
		"envs": [
			"browser"
		],
		"prettier": "true",
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "browser"
				}
			],
			"import/extensions": [
				2,
				"never",
				{
					"png": "always"
				}
			],
			"unicorn/filename-case": [
				"error",
				{
					"cases": {
						"camelCase": true,
						"pascalCase": true
					}
				}
			],
			"@typescript-eslint/naming-convention": [
				"error",
				{
					"selector": "default",
					"format": [
						"camelCase"
					],
					"leadingUnderscore": "allowSingleOrDouble"
				},
				{
					"selector": "variable",
					"format": [
						"camelCase",
						"UPPER_CASE"
					]
				},
				{
					"selector": "parameter",
					"format": [
						"camelCase"
					],
					"leadingUnderscore": "allowSingleOrDouble"
				},
				{
					"selector": "memberLike",
					"modifiers": [
						"private"
					],
					"format": [
						"camelCase"
					],
					"leadingUnderscore": "require"
				},
				{
					"selector": "typeLike",
					"format": [
						"PascalCase"
					]
				}
			],
			"node/prefer-global/process": "off",
			"complexity": "off",
			"no-use-extend-native/no-use-extend-native": "off",
			"unicorn/no-array-callback-reference": "off",
			"@typescript-eslint/ban-types": "off"
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"singleQuote": false,
		"bracketSpacing": true
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"string-quotes": "double"
		}
	},
	"@parcel/bundler-default": {
		"minBundles": 10000000,
		"minBundleSize": 3000,
		"maxParallelRequests": 20
	},
	"dependencies": {
		"async-mutex": "^0.3.2",
		"color": "^4.2.3",
		"combinations": "^1.0.0",
		"intersect": "^1.0.1",
		"requestidlecallback-polyfill": "^1.0.2",
		"specificity": "^0.4.1",
		"tippy.js": "^6.3.7",
		"webextension-polyfill": "^0.8.0"
	},
	"devDependencies": {
		"@nut-tree/nut-js": "^2.2.0",
		"@parcel/config-webextension": "^2.5.0",
		"@parcel/transformer-image": "^2.5.0",
		"@parcel/transformer-inline-string": "^2.8.3",
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/color": "^3.0.3",
		"@types/combinations": "^1.0.0",
		"@types/intersect": "^1.0.0",
		"@types/jest": "^27.4.1",
		"@types/webextension-polyfill": "^0.8.2",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint-config-xo": "^0.40.0",
		"eslint-config-xo-typescript": "^0.50.0",
		"http-server": "^14.1.1",
		"jest": "^27.5.1",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.5.0",
		"path-browserify": "^1.0.1",
		"process": "^0.11.10",
		"puppeteer": "^17.0.0",
		"rimraf": "^3.0.2",
		"stylelint": "^14.6.0",
		"stylelint-config-xo": "^0.21.0",
		"ts-jest": "^27.1.4",
		"ts-unused-exports": "^8.0.5",
		"typescript": "^4.6.3",
		"web-ext": "^7.4.0",
		"xo": "^0.48.0"
	},
	"webExt": {
		"sourceDir": "dist-mv2",
		"run": {
			"startUrl": [
				"https://en.wikipedia.org/wiki/Main_Page"
			]
		}
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"transform": {
			"node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!variables/.*)"
		]
	}
}
