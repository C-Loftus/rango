{
	"name": "Rango",
	"version": "0.0.0",
	"description": "Extension that allows you to interact with webpages using your voice and talon",
	"homepage_url": "https://github.com/david-tejada/rango",
	"manifest_version": 2,
	"minimum_chrome_version": "80",
	"browser_specific_settings": {
		"gecko": {
			"id": "rango@david-tejada",
			"strict_min_version": "80.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": ["storage", "activeTab", "clipboardRead", "clipboardWrite"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.ts"],
			"css": ["hints.css"],
			"run_at": "document_idle"
		},
		{
			"matches": ["https://*.no_url.com/*"],
			"exclude_matches": ["https://*.no_url.com/*"],
			"js": [
				"types.ts",
				"hints.ts",
				"click-element.ts",
				"intersecting-elements.ts"
			]
		}
	],
	"background": {
		"persistent": false,
		"scripts": ["background.ts"]
	},
	"commands": {
		"get-talon-request": {
			"suggested_key": {
				"default": "Alt+Shift+A"
			},
			"description": "Give the signal to the native app to get the request"
		},
		"insert-viewport-mark": {
			"suggested_key": {
				"default": "Alt+Shift+U"
			},
			"description": "Draw the dots"
		}
	}
}
